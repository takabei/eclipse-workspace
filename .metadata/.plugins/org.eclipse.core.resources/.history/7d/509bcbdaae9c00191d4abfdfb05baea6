import random
import time

correctCount = 0
continueLoop = 'Y'
startTime = time.time()

while continueLoop == 'Y':
    number1 = random.randint(0,9)
    number2 = random.randint(0,9)
    
    number1,number2 = number2,number1 if number1 < number2 else number1,number2
    
    answer = eval(input("What is ",number1, " - ", number2, "？"))
    
    if number1 - number2 == answer:
        print("You are correct!")
        correctCount += 1
    else:
        print("Your answer is wrong.\n", number1, "-",\
               number2, "is", number1 - number2)